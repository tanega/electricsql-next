{
  "name": "electricsql-next",
  "version": "0.1.0",
  "main": "builder.js",
  "scripts": {
    "backend:down": "docker compose -f backend/compose/docker-compose.yaml down --volumes",
    "backend:start": "docker compose --env-file backend/compose/.envrc -f backend/compose/docker-compose.yaml up",
    "backend:stop": "yarn backend:down",
    "backend:up": "yarn backend:start --detach",
    "client:generate": "npx electric-sql generate",
    "client:watch": "npx electric-sql generate --watch",
    "db:migrate": "node ./db/migrate.js",
    "db:psql": "node ./db/connect.js",
    "electric:start": "node ./backend/startElectric.js",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "engines": {
    "node": ">=16.11.0"
  },
  "dependencies": {
    "electric-sql": "0.6.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next": "14.0.1",
    "wa-sqlite": "rhashimoto/wa-sqlite#master"
  },
  "devDependencies": {
    "@databases/pg": "^5.4.1",
    "@electric-sql/prisma-generator": "1.0.2",
    "@prisma/client": "4.8.1",
    "esbuild": "^0.16.17",
    "esbuild-plugin-inline-image": "^0.0.9",
    "fs-extra": "^10.0.0",
    "prisma": "4.8.1",
    "shelljs": "^0.8.5",
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "eslint": "^8"
  }
}
